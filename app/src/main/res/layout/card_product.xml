<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="1dip">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="left|start|bottom"
            android:padding="5dp"
            android:text="@string/product_name"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/item_owner_text_size_neg_adjusted"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="@dimen/item_owner_text_size"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_image_placeholder" />

        <TextView
            android:id="@+id/tv_product_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_owner_text_size_pos_adjusted"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="@dimen/item_owner_text_size_neg_adjusted2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal|top"
            android:text="@string/product_id"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_owner_text_size" />

        <TextView
            android:id="@+id/tv_product_sale_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:gravity="start|left"
            android:padding="5dp"
            android:text="@string/sale_price"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>